<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">业务信息</a>
    </li>
    <li class="active">商品添加</li>
  </ul>
</div>
<div class="page-content">
  <div class="page-header">
    <h1>
      业务信息
      <small>
        <i class="icon-double-angle-right"></i>
        商品信息添加
      </small>
    </h1>
  </div>

  <div class="page-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品编号</label>
          <div class="col-sm-9">
            <p class="form-control-static">11111</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品状态</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedItemStatus">
              <option value="" selected>请选择所属品牌</option>
              <option v-for="itemStatus in temStatusList" :value="itemStatus.code">
                \{{itemStatus.text}}
              </option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">品牌</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedBrand">
              <option value="" selected>请选择所属品牌</option>
              <option v-for="brand in brandList" :value="brand.brandID">
                \{{brand.brandNameCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">一级分类</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedCategory">
              <option value="" selected>请选择一级分类</option>
              <option v-for="category in categoryList" :value="category.categoryID">
                \{{category.categoryNameCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">二级分类</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedSubCategory">
              <option value="" selected>请选择二级分类</option>
              <option v-for="subCategory in subCategoryList" :value="subCategory.subCategoryID">
                \{{subCategory.subCategoryNameCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品系列</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedSeries">
              <option value="0" selected>请选择商品系列</option>
              <option v-for="series in seriesList" :value="series.seriesID">
                \{{subCategory.itemSeriesCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品名（中文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="inputEmail3" maxlength="15" v-model="itemNameCN">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品名（英文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="inputEmail3" maxlength="15" v-model="itemNameCN">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品单价</label>
          <div class="col-sm-9">
            <input type="text" class="form-control text-number" maxlength="10" v-model="unitPrice">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品促销价</label>
          <div class="col-sm-9">
            <input type="text" class="form-control text-number" maxlength="10" v-model="promotionPrice">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品批发汇率</label>
          <div class="col-sm-9">
            <input type="text" class="form-control text-number" maxlength="10" v-model="rate" placeholder="%">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品颜色</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedColor">
              <option value="" selected>请选择商品颜色</option>
              <option v-for="color in colorList" :value="color.colorID">
                \{{color.colorCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品尺寸</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedSize">
              <option value="" selected>请选择商品尺寸</option>
              <option v-for="size in sizeList" :value="size.sizeID">
                \{{size.sizeCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品材质</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedMaterial">
              <option value="" selected>请选择商品材质</option>
              <option v-for="material in materialList" :value="material.materialID">
                \{{material.materialCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">商品产地</label>
          <div class="col-sm-9">
            <select class="form-control" v-model="selectedMadeIn">
              <option value="" selected>请选择商品尺寸</option>
              <option v-for="country in countryList" :value="country.countryID">
                \{{country.countryNameCN}}
              </option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">可调节尺寸（中文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="20" v-model="adjustLengthCN">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">可调节尺寸（英文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="20" v-model="adjustLengthEN">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">适用对象（中文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="20" v-model="suitablePetCN">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">适用对象（英文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="20" v-model="suitablePetEN">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">简要描述（中文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="30" v-model="itemShortDescriptionCN">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">简要描述（英文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="30" v-model="itemShortDescriptionEN">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group has-error">
          <label class="col-sm-3 control-label">详细描述（中文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="30" v-model="temDescriptionCN">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="col-sm-3 control-label">详细描述（英文）</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" maxlength="30" v-model="itemDescriptionEN">
          </div>
        </div>
      </div>
    </div>
    <div class="space-12"></div>
    <div class="row">
      <div class="col-sm-12 text-center">
        <a href="/item" class="btn btn-default">返回</a>
        <button type="button" class="btn btn-primary">保存并下一步</button>
      </div>
    </div>
  </div>


</div>

<script src="/javascripts/view/addItem.js"></script>